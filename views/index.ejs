<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" href="bulma.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
	</head>
	<body>
		<section class="section">
			<div class="maincolumns columns is-desktop is-vcentered">
				<div class="column is-10 is-offset-1 notification is-info is-light box container">
					<div class="title">
						Restaurants
					</div>
					<% if (locals.allUsers) { %>
						<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
							<tr>
								<th> Name </th>
								<th colspan="4" > Description </th>
							</tr>
							</thead>
							<% let i=0; %>
							<% for(i=0; i < allUsers.length; i++) { %>
							<tr>
								<td><%= allUsers[i].name %></td>
								<td><%= allUsers[i].description %></td>
								<td> <a href='/deleteRestaurant?id=<%= allUsers[i].restaurant_id %>'><i class ="fas fa-trash"> </i></a></td>
								<td> <a href='/showReviews?id=<%= allUsers[i].restaurant_id %>'><i class ="fas fa-star"> </i></a></td>
								
							</tr>
							<% } %>
							<tfoot>
								<tr> <td colspan="4">
								There are <%= i %> restaurants.
								</td> </tr>
							</tfoot>
						</table>
						<form  method="POST" action="/addRestaurant">
						
							<div class="field is-horizontal">
								<div class="field-label is-normal">
									<label class="label">Add New Restaurant</label>
								</div>
								
								<div class="field-body">
									<div class="field">
										<p class="control is-expanded">
											<input name="name" class="input" type="text" placeholder="Restaurant Name">
										</p>
									</div>
									<div class="field">
										<p class="control is-expanded">
											<input name="description" class="input" type="text" placeholder="Description">
										</p>
									</div>
								
									<div class="field">
										<button type ="submit" class="button is-link">
											<span>Add</span>
											<span class="icon is-small">
												<i class="fas fa-user-plus"></i>
											</span>
										</button>
									</div>
								</div>
							</div>
						</form>
						</div>
					<% } %>
				</div>
			</div>
		</section>
	</body>
</html>